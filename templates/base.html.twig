<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" type="image/png" href="/assets/images/flavicon/boude.png">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% include '/includes/_navbar.html.twig' %}
		{% for category, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-dismissible {% if category == 'success' %}alert-success{% elseif category == 'danger' %}alert-danger{% endif %}">
					<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
					<strong>{{ message }}</strong>
				</div>
			{% endfor %}
		{% endfor %}
		{% block body %}{% endblock %}
		{% include '/includes/_footer.html.twig' %}


	</body>
</html>
