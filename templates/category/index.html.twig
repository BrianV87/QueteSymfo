{% extends 'base.html.twig' %}

{% block title %}All category{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center text-white">Toutes les catégories :</h1>
        <div class="row">
            {% for category in categories %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h2 class="card-title">{{ loop.index }} / {{ category.name }}</h2>
                            <a href="{{ path("category_show", { categoryName: category.name }) }}" class="btn btn-primary">Voir la liste des séries</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="col text-white">Aucune catégorie trouvée.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
