{% extends 'base.html.twig' %}

{% block title %}Épisode {{ episode.number }}: {{ episode.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ episode.title }}</h1>
        <p>Numéro de l'épisode: {{ episode.number }}</p>
        <p>Synopsis: {{ episode.synopsis }}</p>
        <a href="{{ path('season_show', { 'id': episode.season.id }) }}" class="btn btn-secondary mt-5">Retour à la saison</a>
    </div>
{% endblock %}
