{% extends 'base.html.twig' %}

{% block title %}Série : {{ program.id }}{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start m-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="m-3">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie : {{ program.category.name }}</p>
			<p>Country: {{ program.country }}</p>
			<p>Year: {{ program.year }}</p>
		</div>
	</div>

	<h2 class="mt-5">Saisons</h2>
	<ul>
		{% for season in program.seasons %}
			<li>
				<a href="{{ path('season_show', {id: season.id}) }}">
					Saison {{ season.number }}
				</a>
			</li>
		{% else %}
			<li>Aucune saison pour ce programme</li>
		{% endfor %}
	</ul>

	<a href="{{ path('category_show', { 'categoryName': program.category.name }) }}">
		Retour à la catégorie
	</a>

{% endblock %}
