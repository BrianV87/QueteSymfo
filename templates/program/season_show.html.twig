{% extends 'base.html.twig' %}

{% block title %}Saison {{ season.number }} - {{ season.program.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ season.program.title }} : Saison {{ season.number }}</h1>

        <h2>Épisodes :</h2>
        <div class="row">
            {% for episode in season.episodes %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                <a href="{{ path('episode_show', { 'id': episode.id }) }}" class="d-block">
                    Épisode {{ episode.number }} : {{ episode.title }}
                </a>
            </div>
            {% if loop.index is divisibleby(5) %}
        </div><div class="row">
            {% endif %}
            {% endfor %}
        </div>

        <a href="{{ path('program_show', { 'id': season.program.id }) }}" class="btn btn-secondary mt-5">Retour à la série</a>
    </div>
{% endblock %}
